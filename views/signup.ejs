                let pw =$('#pw')

                let data ={
                    'email':e.val(),
                    'username':un.val(),
                    'password':pw.val()
                }
                console.log(data)


                $('#mf').ajaxSubmit({
                    error: function(crap,res) {
                        console.log(crap,res)
                        let data = JSON.parse(crap.responseText)
                        console.log(data)
                        m.innerText = `${data.error? 'Error: '+ data.message : 'Successful'}`
                    },
                    success: function(resb) {
                        console.log(resb)
                        let data;
                        try {
                            data = JSON.parse(resb)
                        }catch(e) {data = {}}
                        m.innerText = `${data.error? 'Error: '+ data.message : 'Successful'}`
